<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marcelk.evadegame.MainActivity"
    android:background="@drawable/menubg">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Control"
        android:id="@+id/start3btn"
        android:background="#000000"
        android:textColor="#f9f7f7"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/start2btn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Your Pace"
        android:id="@+id/start2btn"
        android:textColor="#f9f6f6"
        android:textSize="25dp"
        android:background="#232323"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Just Metres Ahead"
        android:id="@+id/start1btn"
        android:layout_above="@+id/start2btn"
        android:background="#696868"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_above="@+id/start2btn"
        android:layout_toEndOf="@+id/start1btn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hold a game mode to get instructions tips."
        android:id="@+id/gameInfoText"
        android:layout_alignParentStart="true"
        android:background="#070110"
        android:textColor="#fefbfb"
        android:visibility="visible"
        android:layout_below="@+id/start3btn"
        android:textSize="15dp"
        android:scrollbars="vertical" />

</RelativeLayout>
